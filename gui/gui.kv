<SplashScreen>
    GridLayout:
        cols: 1
        rows: 3
        Button:
            text: "New Game"
            background_color : 0, 0, 1, 1
            on_press:
                app.root.current = "New Game"
        Button:
            text: "Options"
            background_color: 1, 1, 0, 1
            on_press:
                app.root.current = "Options"
        Button:
            text: "Exit"
            background_color: 0, 0, 1, 1
            on_press:
                app.stop()

<Options>
    title: 'Options'
    id: options_window

    GridLayout:
        id: options_grid_layout
        cols: 2
        rows: 5
        CheckBox:
            id: training_wheels
            active: root.training_wheels_initial_value()
            on_active: root.set_training_wheels(self, self.active)
        Label:
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            text: 'Training Wheels'
        Button:
            text: "Back"
            on_press:
                app.root.current = "Splash Screen"

